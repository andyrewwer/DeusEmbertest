<nav class="col-sm-3 col-md-2 d-none d-sm-block bg-warning sidebar">
    <h2> News </h2>
  <ul class="nav nav-pills flex-column">
{{#each reverseNews as |newsItem index|}}
    <li class="nav-item newsBorder" id={{reverse-news-numbers index news.length}}>
    <a class="nav-link news-nav-bar-item"{{action 'showNews' index newsItem.id news.length}}> {{reverse-news-numbers index news.length}}: {{newsItem.responseTitle}} </a>
    </li><br><br><br>
{{else}}
    <li class="nav-item">
        <a class="nav-link news-nav-bar-item" href="#">Sorry there is no news yet.</a>
    </li>
{{/each}}
    </ul>
</nav>




{{!-- This is the main code --}}
<div class="col-sm-6 col-md-8 d-none d-sm-block bg-info">
    {{outlet}}
    <div class="jumbotron"> 
        <h3 id="newsTitle">This is where responses goes</h3>
        <p class="newsText" id="newsText">Select a news item from the left or a personal response from the right hand side to get starter!</p>
        <button {{action 'editNews'}} class="btn btn-primary hiddenButton" id="editNewsButton">Edit News</button>
    </div>
</div>

{{!-- This is the other bar for personal responses --}}

<nav class="col-sm-3 col-md-2 d-none d-sm-block bg-warning sidebar">
    <h2> Personal Responses </h2>
  <ul class="nav nav-pills flex-column">
{{#each reverseResponses as |responsesItem index|}}
    <li class="nav-item newsBorder" id='{{reverse-news-numbers index responses.length}}r'>
    <a class="nav-link news-nav-bar-item"{{action 'showResponse' index responsesItem.id responses.length}}> {{reverse-news-numbers index responses.length}}: {{responsesItem.responseTitle}} </a>
    </li><br><br><br>
{{else}}
    <li class="nav-item">
        <a class="nav-link news-nav-bar-item" href="#">Sorry there is no news yet.</a>
    </li>
{{/each}}

  </ul>
</nav>








